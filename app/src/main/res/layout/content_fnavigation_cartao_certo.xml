<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin_mercado"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_mercado"
    android:layout_marginTop="@dimen/activity_horizontal_margin_mercado"
    android:layout_marginBottom="@dimen/activity_horizontal_margin_mercado"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:selectAllOnFocus="false"
    tools:showIn="@layout/app_bar_fnavigation_cartao_certo"
    tools:context="com.aquimercado.aquimercado.popup_fechamento.FNavigation_cartaoCERTO">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_marginStart="30dp"
            android:id="@+id/img_mercadoFechamento"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY" >
        </com.android.volley.toolbox.NetworkImageView>

        <TextView
            android:id="@+id/txt_nomeMercado"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/ColorFontSPLAShCERTO"
        android:layout_width="wrap_content"
        android:layout_height="1dp">
    </View>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp">
    </View>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/txt_horapedido"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="EndereÃ§o: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEnd"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp">
        </View>

        <Button
            android:background="@color/ColorFontSPLAShCERTO"
            android:drawable="@drawable/icchached"
            android:text="Trocar"
            android:textColor="@color/ColorWhite"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btEndEntrega" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:text="Valor do Pedido: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_valorTotal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTextFrete"
                android:textStyle="bold"
                android:text="Valor Frete: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_valorFrete"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:textStyle="bold"
                android:text="Valor Total: "
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_valorEQ"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />


        </LinearLayout>



        <TextView
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:text="Meio de Pagamento: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="162dp"
                android:layout_height="105dp"
                android:src="@drawable/cheque"
                android:id="@+id/imageViewCheque"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:id="@+id/recyclerVIEW_cartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        />
</LinearLayout>
