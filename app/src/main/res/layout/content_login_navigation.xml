<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:isScrollContainer="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/ColorBack"
    tools:showIn="@layout/app_bar_login_navigation"
    tools:context="com.aquimercado.aquimercado.login.LoginNavigation">
    <requestFocus />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </View>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/icone"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </View>

        <EditText
            android:drawableLeft="@drawable/mail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editEmail" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </View>

        <EditText
            android:drawableLeft="@drawable/password"
            android:drawableRight="@drawable/invisivel"
            android:hint="Senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:id="@+id/editSenha" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <CheckBox
            android:id="@+id/checkbox_autologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deseja guardar dados de acesso?"
            android:textColor="@color/ColorFontSPLAShCERTO"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </View>

        <Button

            android:background="@color/ColorFontSPLAShCERTO"
            android:textColor="@color/ColorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/btEntrar" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp">
        </View>

        <TextView
            android:id="@+id/txtCadastrar"
            android:clickable="true"
            android:onClick="cadastrar"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃ£o tem uma conta? Crie agora!"
            android:textColor="@color/ColorFontSPLAShCERTO"
            />
        <TextView
            android:id="@+id/txtEsqueceu"
            android:clickable="true"
            android:paddingTop="12dp"
            android:onClick="recuperarsenha"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar sua senha!"
            android:textColor="@color/ColorFontSPLAShCERTO"
            />

    </LinearLayout>
</ScrollView>
