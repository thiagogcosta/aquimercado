<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:isScrollContainer="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_contato_navigation"
    tools:context="com.aquimercado.aquimercado.sobre.ContatoNavigation">
    <requestFocus />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            </View>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/contato" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            </View>

            <EditText
                android:hint="Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNome" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            </View>

            <EditText
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editEmail" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            </View>

            <EditText
                android:hint="Mensagem"
                android:lines="3"
                android:id="@+id/editMensagem"
                android:scrollHorizontally="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp">
            </View>
            <Button
                android:textColor="@color/ColorWhite"
                android:background="@color/ColorFontSPLAShCERTO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btMensagem"
                android:text="Enviar" />
        </LinearLayout>
</ScrollView>
