<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/ColorBack"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_pedidos_list_navigation"
    tools:context="com.aquimercado.aquimercado.pedidos.PedidosListNavigation">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:text="Seus Pedidos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
        </TextView>

        <Button
            android:background="@color/ColorFontSPLAShCERTO"
            android:textColor="@color/ColorWhite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Filtrar"
            android:id="@+id/btFiltrar" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/ColorFontSPLAShCERTO"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_gravity="center"
            android:text="Status: "
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tipo_pedido"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_pedido_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
