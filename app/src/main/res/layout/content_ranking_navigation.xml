<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ranking_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_mercado"
    android:paddingLeft="@dimen/activity_horizontal_margin_mercado"
    android:paddingRight="@dimen/activity_horizontal_margin_mercado"
    android:paddingTop="@dimen/activity_vertical_margin_mercado"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aquimercado.aquimercado.ranking.RankingNavigation"
    tools:showIn="@layout/app_bar_ranking_navigation">

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"></View>

    <TextView
        android:textColor="@color/ColorFontSPLAShCERTO"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Ranking Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"></View>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/custom_popup"
        android:color="@color/ColorWhite"
        android:id="@+id/recycler_pontosTotais"
        android:layout_width="wrap_content"
        android:layout_height="170dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"></View>


    <TextView
        android:textColor="@color/ColorFontSPLAShCERTO"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Ranking Semanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"></View>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/custom_popup"
        android:color="@color/ColorWhite"
        android:id="@+id/recycler_pontosSemanais"
        android:layout_width="wrap_content"
        android:layout_height="170dp" />


</LinearLayout>
