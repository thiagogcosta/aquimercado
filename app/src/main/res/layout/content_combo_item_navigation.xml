<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_mercado"
    android:paddingRight="@dimen/activity_horizontal_margin_mercado"
    android:paddingTop="@dimen/activity_vertical_margin_mercado"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_combo_item_navigation"
    tools:context=".combo.ComboItemNavigation">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"/>


    <!-- Footer aligned to bottom -->


    <include layout="@layout/footer_loja" />
</RelativeLayout>
