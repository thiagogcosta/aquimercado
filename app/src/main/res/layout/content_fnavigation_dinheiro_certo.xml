<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin_mercado"
    android:paddingRight="@dimen/activity_horizontal_margin_mercado"
    android:paddingTop="@dimen/activity_horizontal_margin_mercado"
    android:paddingBottom="@dimen/activity_horizontal_margin_mercado"
    android:background="@color/ColorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/app_bar_fnavigation_dinheiro_certo"
    tools:context="com.aquimercado.aquimercado.popup_fechamento.FNavigation_dinheiroCERTO">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_marginStart="30dp"
                android:id="@+id/img_mercadoFechamento"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY" >
            </com.android.volley.toolbox.NetworkImageView>

            <TextView
                android:id="@+id/txt_nomeMercado"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/ColorFontSPLAShCERTO"
            android:layout_width="wrap_content"
            android:layout_height="1dp">
        </View>

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp">
        </View>

        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_horapedido"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="EndereÃ§o: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtEnd"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp">
            </View>

            <Button
                android:background="@color/ColorFontSPLAShCERTO"
                android:drawable="@drawable/icchached"
                android:text="Trocar"
                android:textColor="@color/ColorWhite"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btEndEntrega" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Valor do Pedido:"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=""
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_valorTotal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idTextFrete"
                    android:textStyle="bold"
                    android:text="Valor Frete:"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=""
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_valorFrete"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Valor Total:"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=""
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_valorEQ"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />




            </LinearLayout>

            <TextView
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:text="Meio de Pagamento: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="162dp"
                    android:layout_height="105dp"
                    android:src="@drawable/dinheiro"
                    android:id="@+id/imageViewDinheiro"

                    android:layout_marginTop="10dp"
                    />
                </LinearLayout>

        </LinearLayout>

        <!--View
            android:layout_width="wrap_content"
            android:layout_height="60dp">
        </-View>

        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:id="@+id/edt_troco"
                android:hint="Valor: R$"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
        </LinearLayout!-->

    </LinearLayout>

</ScrollView>

